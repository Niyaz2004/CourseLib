extends layout

block content
  .dashboard-container
    .dashboard-header
      h1.dashboard-title Teacher Dashboard
      p.dashboard-subtitle Manage your courses and content
      a.create-course-btn(href='/teacher/createcourse')
        svg.plus-icon(viewBox="0 0 24 24")
          path(d="M12 4v16m8-8H4")
        span Create New Course

    .courses-section
      if courses && courses.length
        .course-grid
          each course in courses
            .course-card(data-id=course._id)
              .course-card-header
                h3.course-title #{course.title || course.name || 'Untitled Course'}
                .course-actions
                  a.edit-btn(href=`/courses/${course._id}/edit` title="Edit")
                    svg(viewBox="0 0 24 24")
                      path(d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z")
                  button.delete-btn.delete-course-btn(type='button' title="Delete")
                    svg(viewBox="0 0 24 24")
                      path(d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16")
              a.course-link(href=`/courses/${course._id}`) View Course Details
      else
        .empty-state
          svg.empty-icon(viewBox="0 0 24 24")
            path(d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
          h3 No Courses Yet
          p Get started by creating your first course
          a.create-course-btn(href='/teacher/createcourse')
            svg.plus-icon(viewBox="0 0 24 24")
              path(d="M12 4v16m8-8H4")
            span Create New Course