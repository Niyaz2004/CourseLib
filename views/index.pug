extends layout

block content
  section.hero
    h1 Welcome to CourseLib
    p An educational platform for teachers and students
    if user
      a.btn(href=`/${user.role}/dashboard`) Go to Dashboard
    else
      .cta-buttons
        a.btn(href="/login") Login
        a.btn.btn-secondary(href="/register") Register

  section.features
    .feature
      h2 For Teachers
      p Create and manage courses and assignments
    .feature
      h2 For Students
      p Enroll in courses and submit assignments