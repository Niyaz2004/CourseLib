doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CourseLib - Educational Platform
    link(rel="stylesheet", href="css/styles.css")

  body
    block content
      section.hero
        h1 Welcome to CourseLib
        p An educational platform for teachers and students
        if user
          a.btn(href=`/${user.role}/dashboard`) Go to Dashboard
        else
          .cta-buttons
            a.btn(href="/login") Login
            a.btn.btn-secondary(href="/register") Register