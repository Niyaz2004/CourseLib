extends base

block content
  .auth-container
    .auth-card
      .auth-header
        h1.auth-title Create Your Account
        p.auth-subtitle Join our learning community today

      form#registerForm.auth-form
        .form-group.animated-input
          input#email.form-control(type="email" name="email" required)
          label(for="email") Email Address
          .input-underline

        .form-group.animated-input
          input#password.form-control(type="password" name="password" required minlength="8")
          label(for="password") Password
          .input-underline
          .password-hint (Minimum 6 characters)

        .form-group.role-selection
          label.role-label Select Your Role:
          .role-options
            .role-option
              input#roleStudent(type="radio" name="role" value="student" checked)
              label(for="roleStudent") 
                svg.role-icon(viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="size-6")
                  path(stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5")
                span Student
            .role-option
              input#roleTeacher(type="radio" name="role" value="teacher" checked)
              label(for="roleTeacher")
                svg.role-icon(viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke="currentColor" class="size-6")
                  path(stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25")
                span Teacher

        button.btn.auth-btn(type="submit")
          span Register
          svg.arrow-icon(viewBox="0 0 24 24")
            path(d="M4 11v2h12l-5.5 5.5 1.42 1.42L19.84 12l-7.92-7.92L10.5 5.5 16 11H4z")

      .auth-footer
        p Already have an account?
        a.login-link(href="/login") 
          span Login here
          svg.arrow-icon(viewBox="0 0 24 24")
            path(d="M4 11v2h12l-5.5 5.5 1.42 1.42L19.84 12l-7.92-7.92L10.5 5.5 16 11H4z")

block scripts
  script(src="/js/auth.js")